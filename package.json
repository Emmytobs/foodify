{
  "name": "DDD-playground",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "build": "npx typescript",
    "prestart": "rimraf ./dist && npm run build",
    "start": "cross-env NODE_ENV=development node ./src/index.js",
    "start:dev": "nodemon",
    "test": "echo \"Error: no test specified\" && exit 1",
    "create-migration": "npx sequelize-cli migration:generate --name",
    "migrate": "npx sequelize-cli db:migrate",
    "undo-migration": "npx sequelize-cli db:migrate:undo",
    "undo-multiple-migrations": "npx sequelize-cli db:migrate:undo:all",
    "create-seed": "npx sequelize-cli seed:generate --name",
    "seed": "npx sequelize-cli db:seed:all",
    "undo-seed": "npx sequelize-cli db:seed:undo",
    "setup-dev-env": "npm run migrate && npm run seed && echo 'Success: Dev environment ready'"
  },
  "keywords": [],
  "author": "Emmanuel Otobo",
  "license": "MIT",
  "dependencies": {
    "@types/express": "^4.17.13",
    "@types/sequelize": "^4.28.10",
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "cross-env": "^7.0.3",
    "dotenv": "^10.0.0",
    "express": "^4.17.1",
    "jsonwebtoken": "^8.5.1",
    "nodemailer": "^6.7.2",
    "pg": "^8.7.1",
    "postgres": "^1.0.2",
    "rimraf": "^3.0.2",
    "sequelize": "^6.6.5",
    "ts-node": "^10.2.0",
    "uuid": "^8.3.2"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.2",
    "@types/cors": "^2.8.12",
    "@types/node": "^16.6.1",
    "@types/nodemailer": "^6.4.4",
    "@types/uuid": "^8.3.1",
    "nodemon": "^2.0.12",
    "tsc": "^2.0.3",
    "typescript": "^4.3.5"
  }
}
